<%- include('./partials/header.ejs') %>
<%- include('./partials/navbar.ejs') %>

<main>
    <div class="container">
        <h3>Postagens</h3>
        <div class="row formFilter  ">
            <div class="col-lg-12 col-md-12">
                <h5>Filtros:</h5>
                <form action="/post/userId" method="GET">
                    <input type="number" name="searchUserId" id="searchUserId" placeholder="Pesquisar por userId">
                    <button class="btn btn-success">Filtrar</button>
                    <a href="/posts" class="btn btn-success">Limpar Filtro</a>
                </form>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12 col-md-12">
                <div class="table-responsive">
                    <table class="table table-dark table-hover" style="height: 500px !important; display: block;overflow-y : scroll;">
                        <thead>
                            <tr>
                                <th>#id</th>
                                <th>userId</th>
                                <th>TÃ­tulo</th>
                                <th>Corpo da postagem</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% posts.forEach(post => { %>
                            <tr>
                                <td><%= post.id %></td>
                                <td><%= post.userId %></td>
                                <td><%= post.title %></td>
                                <td><%= post.body %></td>
                            </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</main>

<%- include('./partials/footer.ejs') %>