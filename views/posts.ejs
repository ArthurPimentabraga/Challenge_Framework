        <div class="row">
            <div class="col-lg-12 col-md-12">
                <div class="table-responsive">
                    <table class="table table-dark table-hover">
                        <thead>
                            <tr>
                                <th>#id</th>
                                <th>userId</th>
                                <th>TÃ­tulo</th>
                                <th>Corpo da postagem</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% result.selected.forEach(post => { %>
                            <tr>
                                <td><%= post.id %></td>
                                <td><%= post.userId %></td>
                                <td><%= post.title %></td>
                                <td><%= post.body %></td>
                            </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12 col-md-12">
                <% if(result.next) { %>
                    <a href="/posts/<%= result.page + 1 %>" class="btn btn-dark" style="float: right;">Next -></a>
                <% } %>
                <% if(result.page >= 2) { %>
                    <a href="/posts/<%= result.page - 1 %>" class="btn btn-dark" style="float: left;"><- Previd</a>
