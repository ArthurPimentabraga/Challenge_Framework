<%- include('./partials/header.ejs') %>
<%- include('./partials/navbar.ejs') %>

<main>
    <div class="container">
        <h3>TO-DOs</h3>
        <div class="row">
            <div class="col-lg-12 col-md-12">
                <div class="table-responsive">
                    <table class="table table-dark table-hover">
                        <thead>
                            <tr>
                                <th>#id</th>
                                <th>userId</th>
                                <th>TÃ­tulo</th>
                                <th>Completado</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% result.selected.forEach(todo => { %>
                            <tr>
                                <td><%= todo.id %></td>
                                <td><%= todo.userId %></td>
                                <td><%= todo.title %></td>
                                <td>
                                    <% if(todo.completed) { %>
                                    <input type="checkbox" checked disabled>
                                    <% }else{ %>
                                    <input type="checkbox" disabled>
                                    <% } %>
                                </td>
                            </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12 col-md-12">
                <% if(result.next) { %>
                <a href="/todos/<%= result.page + 1 %>" class="btn btn-dark" style="float: right;">Next -></a>
                <% } %>
                <% if(result.page >= 2) { %>
                <a href="/todos/<%= result.page - 1 %>" class="btn btn-dark" style="float: left;">
                    <- Previd</a>
                        <% } %>
            </div>
        </div>
    </div>
</main>

<%- include('./partials/footer.ejs') %>